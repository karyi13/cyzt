# Flask应用配置
FLASK_APP=app.py
FLASK_ENV=production
PORT=5000

# 数据目录配置 (可选，默认为./data)
DATA_DIR=/app/data
KLINE_CACHE_DIR=/app/data/kline_cache

# 应用密钥 (生产环境请设置为随机值)
SECRET_KEY=your-secret-key-here

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 数据更新配置
# 更新脚本超时时间(秒)
UPDATE_TIMEOUT=3600

# 是否启用定时更新 (true/false)
ENABLE_SCHEDULED_UPDATE=true